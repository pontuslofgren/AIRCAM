<div class="card bg-light p-3">
  <div class="card-body">
    <h2 class="card-title"><%= camera.title %></h2>
    <h6 class="card-subtitle mt-2 fst-italic text-decoration-underline"><%= camera.brand %></h6>
    <p class="card-text mt-2 "><%= camera.description.truncate_words(30) %></p>
    <h6 class="card-subtitle mt-1 mb-2"><%= camera.location %></h6>
    <small class="text-danger font-weight-bold"><%= number_to_currency(camera.price, unit: "€") %></small>
    <hr>
    <%= link_to 'Book ✈︎', new_booking_path(camera), class:"btn btn-secondary" %>
  </div>
</div>
