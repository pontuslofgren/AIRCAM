<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <!-- Logo and Brand Name -->
    <%= link_to "root_path", class: "navbar-brand" do %>
      <%= content_tag :i, "", class: "fa-solid fa-camera", id: 'logofontawesome' %>
    <% end %>

    <!-- Toggle Button for Mobile View -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Links -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="nav navbar-nav ml-auto align-items-left">
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link" href="/cameras">Cameras</a></li>
        <li class="nav-item"><a class="nav-link" href="/bookings">Bookings</a></li>
        <li class="nav-item"><a class="nav-link" href="/about">About Us</a></li>

        <!-- User Authentication and Avatar Button -->
        <% if user_signed_in? %>
          <li class="nav-item">
            <a href="#" class="nav-link" id="avatarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "rounded-circle", alt: "User Avatar", width: "32", height: "32" %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="avatarDropdown">
              <%= link_to "My Profile", "#", class: "dropdown-item" %>
              <%= link_to "Post a Camera", "#", class: "dropdown-item" %>
              <%= link_to "Messages", "#", class: "dropdown-item" %>
              <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>

      <!-- Search Form -->
      <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </div>
</div>
